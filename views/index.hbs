<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer row justify-content-around">
    <div class="search-bar-inner col-8">
      <form action="/">
        <h4 class="mb-2">尋找餐廳：</h4>
        
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>

      </form>
    </div>
    <div class="input-group col-4 d-flex justify-content-end align-items-end">
      <form action="/">
        <select class="form-select" id="inputGroupSelect01" name="sort" style="height:38px; font-size: 0.8rem;"
          onchange="this.form.submit()">
          <option value="0">排序方式</option>
          <option value="asc" {{#ifSelected sortValue "asc" }}selected{{/ifSelected}}>A -> Z</option>
          <option value="desc" {{#ifSelected sortValue "desc" }}selected{{/ifSelected}}>Z -> A</option>
          <option value="category" {{#ifSelected sortValue "category" }}selected{{/ifSelected}}>類別</option>
          <option value="location" {{#ifSelected sortValue "location" }}selected{{/ifSelected}}>地區</option>
        </select>
      </form>

    </div>
  </div>
</div <!--create button-->
<div class="container create-btn">
  <a href="/restaurants/new" class="btn btn-outline-primary">Create</a>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px;">
        {{#each restaurants}}
        <div class="mb-4">
          <div class="card mb-2">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end ">
              <a href="./restaurants/{{ this._id }}/edit" class="btn btn-sm btn-primary">Edit</a>
              <a href="/restaurants/{{this._id}}" class="mx-2 btn btn-sm btn-primary">Detail</a>
              <form action="./restaurants/{{ this._id}}/?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>